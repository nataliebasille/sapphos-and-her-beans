{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* Path Aliases */
    "noErrorTruncation": true,
    "baseUrl": ".",
    "paths": {
      "@db": ["../db"],
      "@db/*": ["../db/*"],
      "@env": ["src/env.mjs"],
      "~/*": ["./src/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
